<form action='/newPassword' method='post' id='passwordForm'>
    <div id='divNameInput'>
        New User Name:
        <input type='text' id='nameInput' name='name'/>
    </div>
    <div>
        New User Password:
        <input type='password' name='password'/>
    </div>
    <button id='submit'>Submit</button> 
</form>
<div id='message'>
    {{message}}
</div>